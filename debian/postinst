#! /bin/sh
# postinst script for smx-fuse
#
# see: dh_installdeb(1)

# smx version
SMX_VERSION=4.4.1-fuse-07-11

# System binaries
CHOWN=/bin/chown
USERADD=/usr/sbin/useradd
LN=/bin/ln

# User and group for the ServiceMix
SMX_USER=smx-fuse
SMX_GROUP=smx-fuse
SMX_HOME=/usr/share/apache-servicemix

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package
#

case "$1" in
    configure)

        # Create a symmlink apache-servicemix-$VERSION -> apache-servicemix
        ${LN} -s -f ${SMX_HOME}-${SMX_VERSION} ${SMX_HOME}

	# Create SMX user and set ownership permissions
	if ! id ${SMX_USER} > /dev/null 2>&1; then
		${USERADD} -r -d ${SMX_HOME} ${SMX_USER} -s /bin/bash
		echo export JAVA_HOME="/usr/lib/jvm/java-6-sun/" > ${SMX_HOME}/.bash_profile
		chmod 755 ${SMX_HOME}/.bash_profile
	fi
       
        # Set ownership permisions
        ${CHOWN} -R ${SMX_USER}:${SMX_GROUP} ${SMX_HOME}-${SMX_VERSION}


    ;;

    abort-upgrade|abort-remove|abort-deconfigure)

    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0


